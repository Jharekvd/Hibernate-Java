<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 <hibernate-mapping>
 	<class name="entities.Actor" table="actores">
 		<id name="idActor" column="ID_ACTOR">
 			<generator class="increment"/>
 		</id>
 		<property name="nombreActor" column="nombre_actor" not-null="true" type="string"/>
 	</class>
 </hibernate-mapping>